<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myblue"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="@color/mywhite"
        android:layout_weight="0.05">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:id="@+id/face"
        android:layout_weight="0.2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/face"
            android:background="@color/mywhite"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0px"
    android:background="@color/mywhite"
    android:layout_weight="0.05">
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.15"
        android:id="@+id/home" >
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@color/mywhite"
            android:layout_weight="0.10" />
        <ImageView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@color/mywhite"
            app:srcCompat="@drawable/ic_account_balance_black"
            android:layout_weight="0.15"
            />
        <TextView
            android:text="@string/myhome"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/mywhite"
            android:textColor="@color/myblue"
            android:layout_weight="0.75"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.15"
        android:id="@+id/bloglist" >
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@color/mywhite"
            android:layout_weight="0.10" />
        <ImageView
            android:layout_width="0px"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_sort_black"
            android:background="@color/mywhite"
            android:layout_weight="0.15" />

        <TextView
            android:text="@string/mybloglist"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/mywhite"
            android:textColor="@color/myblue"
            android:layout_weight="0.75" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.15"
        android:id="@+id/contact" >
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@color/mywhite"
            android:layout_weight="0.10" />
        <ImageView
            android:layout_width="0px"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_send_black"
            android:background="@color/mywhite"
            android:layout_weight="0.15" />

        <TextView
            android:text="@string/contact"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/mywhite"
            android:textColor="@color/myblue"
            android:gravity="center"
            android:layout_weight="0.75" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.15"
        android:id="@+id/about" >
        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:background="@color/mywhite"
            android:layout_weight="0.10" />
        <ImageView
            android:layout_width="0px"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_vpn_key_black"
            android:background="@color/mywhite"
            android:layout_weight="0.15" />

        <TextView
        android:text="@string/about"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/mywhite"
        android:textColor="@color/myblue"
        android:gravity="center"
        android:layout_weight="0.75" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.1">
        <TextView
            android:text="@string/mycopy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/mywhite"
            android:layout_gravity="left"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>